# ==========================================
# 应用配置
# ==========================================
APP_NAME=API智能测试平台
APP_VERSION=1.0.0
DEBUG=True

# ==========================================
# PostgreSQL 数据库配置
# ==========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=testplatform
POSTGRES_PASSWORD=testplatform123
POSTGRES_DB=test_platform
# 或直接使用完整 URL（优先级更高）
# POSTGRES_DATABASE_URL=postgresql://testplatform:testplatform123@localhost:5432/test_platform
# POSTGRES_ASYNC_DATABASE_URL=postgresql+asyncpg://testplatform:testplatform123@localhost:5432/test_platform

# ==========================================
# Redis 配置
# ==========================================
REDIS_URL=redis://localhost:6379/0

# ==========================================
# JWT 配置
# ==========================================
SECRET_KEY=your-secret-key-change-this-in-production-2024
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==========================================
# 加密配置
# ==========================================
ENCRYPTION_KEY=your-secret-key-for-frontend-encryption-2024

# ==========================================
# CORS 配置
# ==========================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==========================================
# 文件上传配置
# ==========================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# ==========================================
# Celery 配置
# ==========================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ==========================================
# 邮件配置（可选）
# ==========================================
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=

